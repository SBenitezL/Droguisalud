{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('CSS/styles_insert_producto.css') }}">
{% endblock %}

{% block title %}Producto index{% endblock %}

{% block body %}
    <div class="table-container">
        <h1 class = "titulo">Inventario</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Unidad</th>
                    <th>Precio</th>
                    <th>Precio Unitario</th>
                    <th>Costo</th>
                    <th>IVA %</th>
                    <th>Cantidad</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for producto in productos %}
                <tr>
                    <td data-label="Id">{{ producto.id }}</td>
                    <td data-label="Nombre">{{ producto.prdNombre }}</td>
                    <td data-label="Unidad">{{ producto.prdUnidad }}</td>
                    <td data-label="Precio">{{ producto.prdPrecio }}</td>
                    <td data-label="Precio Unitario">{{ producto.prdPrecioUnitario }}</td>
                    <td data-label="Costo">{{ producto.prdCosto }}</td>
                    <td data-label="IVA">{{ producto.prdIva }}</td>
                    <td data-label="Cantidad">{{ producto.prdCantidad }}</td>
                    <td>
                        <a href="{{ path('app_producto_show', {'id': producto.id}) }}" class ="btn">show</a>
                        <a href="{{ path('app_producto_edit', {'id': producto.id}) }}" class = "btn">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <aside class ="nuevo-producto">
        <a href="{{ path('app_producto_new') }}">Create new</a>
    </aside>
{% endblock %}
